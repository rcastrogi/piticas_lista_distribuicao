# Dockerfile para desenvolvimento (SQLite apenas)
FROM python:3.13.2-slim

# Configurar variáveis de ambiente
ENV PYTHONUNBUFFERED 1
ENV DJANGO_SETTINGS_MODULE piticas_distribuicao.settings_docker

# Criar diretório de trabalho
WORKDIR /app

# Atualizar pip primeiro
RUN pip install --upgrade pip

# Copiar requirements mínimo para Docker
COPY requirements-docker.txt .
RUN pip install --no-cache-dir -r requirements-docker.txt

# Copiar código da aplicação
COPY . .

# Coletar arquivos estáticos
RUN python manage.py collectstatic --noinput

# Executar migrações e setup com SQLite
RUN python manage.py migrate && python setup_render.py

# Expor porta
EXPOSE 8000

# Comando para iniciar a aplicação
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "piticas_distribuicao.wsgi:application"]
